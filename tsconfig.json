{
  "extends": "astro/tsconfigs/strict",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.astro"],
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "icons/*": ["src/components/icons/*"],
      "assets/*": ["src/assets/*"],
      "types/*": ["src/types/*"]
    }
  }
}
